using System;
using System.Collections.Generic;
using System.Text;
using System.Threading.Tasks;
namespace дз
{
    class Program
    {
        static void Main(string[] args)
        {
            bool isWorking = true;
            List<int> numbers = new List<int>();

            Console.WriteLine("Вводите числа в массив. Наберите sum чтобы узнать их сумму или exit чтобы выйти из программы");
            while (isWorking)
            {
                string userInput = Console.ReadLine();
                try
                {
                    if (userInput == "exit")
                    {
                        isWorking = false;
                        break;
                    }
                    else if (userInput == "sum")
                    {
                        SumAllElements(numbers);
                    }
                    else
                    {
                        AddElementToList(userInput, numbers);
                    }
                }
                catch (Exception)
                {
                    Console.WriteLine("Ошибка ввода");
                    continue;
                }
            }
        }
        static void AddElementToList(string userInput, List<int>numbers)
        {
            int number = Convert.ToInt32(userInput);
            numbers.Add(number);
        }
        static void SumAllElements(List <int> numbers)
        {
            int sum = 0;
            foreach (var item in numbers)
            {
                sum += item;
            }
            Console.WriteLine("Сумма элементов равна: " + sum);
        }
    }
}
